<style>
    button[id=submit],
    input[type=text],
    select,
    textarea {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }



    button[id=submit],
    input[type=submit] {
        width: 100%;
        background-color: #4CAF50;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    textarea {
        width: 100%;
        background-color: #ffffff;
        color: rgb(0, 0, 0);
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    button[id=submit],
    input[type=submit]:hover {
        background-color: #45a049;
    }

    div {
        border-radius: 5px;
        background-color: #f2f2f2;
        padding: 20px;
    }
</style>

<form>
    <div class="form-group">
        <label for="username">Username</label>
        <input class="form-control" type="text" name="username" id="username" placeholder="Enter Username" />
    </div>
    <div class="form-group">
        <label for="fullname">Full Name</label>
        <input class="form-control" type="text" name="fullname" id="fullname" placeholder="Enter Full Name" />
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input class="form-control" type="email" name="email" id="email" placeholder="Enter Email" />
    </div>
    <div class="form-group">
        <label for="phone">Phone</label>
        <input class="form-control" type="text" name="phone" id="phone" placeholder="Contact Number" />
    </div>

    <label for="type">Type</label><br>
    <select name="type" id="type" class="form-group">
        <option value="student">Student</option>
        <option value="tutor">Tutor</option>
    </select>
    <div class="form-group">
        <label for="password">Password</label>
        <input class="form-control" type="password" name="password" id="password" placeholder="Enter Password" />
    </div>
    <div class="form-group">
        <label for="key">Key</label>
        <input class="form-control" type="password" name="key" id="key" placeholder="Enter Key" />
    </div>
</form>
<button class="btn btn-primary" onclick="register()" style="text-decoration: none;">Register</button>
<br /> Don't have key? Contact Us now!
<br />
<div id="status"></div>

</div>


<script>
    var register = () => {
        var data = {
            'type': document.getElementById("type").value,
            'fullname': document.getElementById("fullname").value,
            'username': document.getElementById("username").value,
            'email': document.getElementById("email").value,
            'phone': document.getElementById("phone").value,
            'password': document.getElementById("password").value,
            'key': document.getElementById("key").value
        };
        console.log(data);

        var status = $("#status");

        $.ajax({
            type: "POST",
            url: "/auth/register",
            data: JSON.stringify(data),
            contentType: "application/json",

            dataType: 'json',
            success: (res) => {
                console.log("success", res);

                if (res.success) {

                    status.html(res.msg);
                    status.css("color", "green");
                } else {
                    status.html(res.msg);
                    status.css("color", "red");
                }

            },
            error: (err) => {
                console.log("err", err.responseJSON.msg);
                status.html(err.responseJSON.msg);
                status.css("color", "red");

            }
        })
    }
</script>