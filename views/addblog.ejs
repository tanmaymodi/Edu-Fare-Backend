<div class="form-group">
    <label for="heading">heading</label>
    <input class="form-control" type="text" name="heading" id="heading" placeholder="Enter Heading" />
</div>
<div class="form-group">
    <label for="cid">Course ID</label>
    <input class="form-control" type="text" name="cid" id="cid" placeholder="Enter Course ID" />
</div>
<div class="form-group">
    <label for="description">Description</label>
    <input class="form-control" type="text" name="description" id="description" placeholder="Enter Description" />
</div>
<div class="form-group">
    <label for="explanation">explanation</label>
    <textarea class="form-control" type="text" name="explanation" id="explanation"></textarea>
</div>
<div class="form-group">
    <label for="images">images</label>
    <input class="form-control" type="text" name="images" id="images" placeholder="Enter image URL" />
</div>
<button class="btn btn-primary" onclick="addblog()">Submit</button>



<script>
    var addblog = () => {
        var data = {
            cid: document.getElementById('cid').value,
            heading: document.getElementById('heading').value,
            description: document.getElementById('description').value,
            explanation: document.getElementById('explanation').value,
            images: document.getElementById('images').value,

        };
        console.log(data);
        $.ajax({
            type: "POST",
            url: '/blog/add',
            data: data,
            success: (res) => {
                console.log("BLog added", res);
                if (res.success) {
                    window.location.replace('/blog');
                }
            },
            error: (err) => {
                console.log("Error", err);
            }
        })
    }
</script>