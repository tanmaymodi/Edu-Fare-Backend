<style>
    * {
        font-family: "Work Sans", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
    }

    input[type=text],
    select,
    textarea {
        width: 70%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    a[id=cancil] {
        text-decoration: none;
        text-align: center;
        width: 20%;
        background-color: #c4c3c3;
        color: rgb(2, 2, 2);
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: all 1s;
    }

    a[id=cancil]:hover {
        background-color: rgb(190, 22, 22);
        color: white;
    }

    textarea {
        background-color: #ffffff;
        color: rgb(0, 0, 0);
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }


    div {
        border-radius: 5px;
        background-color: #f2f2f2;
        padding: 20px;
    }

    .form-group {
        display: flex;
        justify-content: space-between;
        padding: 10px;
    }

    button[id=submit] {
        width: 20%;
        background-color: #3cbe42;
        color: black;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: all 300ms;
    }

    button[id=submit]:hover {
        background-color: #24c22c;
        color: white;
    }

    .buttons {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
    }

    .container {
        text-align: center;
        background-color: rgb(253, 240, 220);
        border-radius: 1rem;
        width: 90vw;
        margin: auto;
    }

    label {
        font-size: 1.2rem;
    }
</style>


<div class="container">

    <h1> Create a New Blog </h1>

    <div class="form-group">
        <label for="heading">Heading:</label>
        <input required class="form-control" type="text" name="heading" id="heading" placeholder="Enter Heading" />
    </div>
    <div class="form-group">
        <label for="cid">Course ID:</label>
        <input required class="form-control" type="text" name="cid" id="cid" placeholder="Enter Course ID" />
    </div>
    <div class="form-group">
        <label for="description">Description:</label>
        <input required class="form-control" type="text" name="description" id="description"
            placeholder="Enter Description" />
    </div>
    <div class="form-group">
        <label for="explanation">Explanation:</label>
        <textarea required class="form-control" type="text" name="explanation" cols="80" rows="8"
            id="explanation"></textarea>
    </div>
    <div class="form-group">
        <label for="images">images</label>
        <input required class="form-control" type="text" name="images" id="images" placeholder="Enter image URL" />
    </div>

    <div class="form-group">
        <label for="Images">3D model frame link</label>
        <input required class="form-control" type="text" name="ml" id="ml" placeholder="Enter model URL" />
    </div>

    <div class="buttons">
        <a class="btn btn-secondary" id="cancil" href="/"> Cancel</a>
        <button id="submit" onclick="addblog()">Submit</button>
    </div>

</div>
<script>
    var addblog = () => {
        var data = {
            cid: document.getElementById('cid').value,
            heading: document.getElementById('heading').value,
            description: document.getElementById('description').value,
            explanation: document.getElementById('explanation').value,
            images: document.getElementById('images').value,
            ml: document.getElementById('ml').value,
        };
        console.log(data);
        $.ajax({
            type: "POST",
            url: '/blog/add',
            data: data,
            success: (res) => {
                console.log("BLog added", res);
                if (res.success) {
                    window.location.replace('/blog');
                }
            },
            error: (err) => {
                console.log("Error", err);
            }
        })
    }
</script>