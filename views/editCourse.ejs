<style>
    * {
        font-family: "Work Sans", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
    }
    
    button[id=submit],
    input[type=text],
    select,
    textarea {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }



    button[id=submit],
    input[type=submit] {
        width: 100%;
        background-color: #4CAF50;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    textarea {
        width: 100%;
        background-color: #ffffff;
        color: rgb(0, 0, 0);
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    button[id=submit],
    input[type=submit]:hover {
        background-color: #45a049;
    }

    div {
        border-radius: 5px;
        background-color: #f2f2f2;
        padding: 20px;
    }
</style>

<div class="container">
    <h1> Course Article </h1>
    <div class="row">

        <form action="/course/edit/" method="POST">
            <div class="form-group">
                <label for="user">Course ID:</label>
                <input class="form-control" type="text" name="cid" value="<%= course.cid %>" id="cid">
            </div>

            <div class="form-group">
                <label for="user">Name:</label>
                <input class="form-control" type="text" name="name" placeholder="<%= course.name %>" id="name">
            </div>

            <div class="form-group">
                <label for="user">Duration:</label>
                <input class="form-control" type="text" name="duration" value="<%= course.duration %>" id="duration">
            </div>

            <div class="form-group">
                <label for="user">Description:</label>
                <textarea class="form-control" type="text" name="description" value="<%= course.description %>"
                    id="description"></textarea>
            </div>

            <a class="btn btn-secondary" href="/"> Cancel</a>
            <button class="btn btn-primary" type="submit"> Submit</button>

        </form>
    </div>
</div>