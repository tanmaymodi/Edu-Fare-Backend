<div class="container">
    <h1> Edit blog </h1>
    <div class="row">

        <form action="/blog/edit/<%=x%>" method="POST">

            <div class="form-group">
                <label for="user">Title:</label>
                <input class="form-control" type="text" name="title" value="<%= blog.title %>" id="title">
            </div>
            <div class="form-group">
                <label for="user">By:</label>
                <input class="form-control" type="text" name="username" placeholder="<%= blog.username %>" id="username" disabled>
            </div>

            <div class="form-group">
                <label for="user">Description:</label>
                <input class="form-control" type="text" name="description" value="<%= blog.title %>" id="description">
            </div>

            <div class="form-group">
                <textarea class="form-control" rows="10" cols="100" name="body" id="bbody" placeholder=""><%=blog.body%></textarea></div>
            <a class="btn btn-secondary" href="/"> Cancel</a>
            <button class="btn btn-primary" type="submit"> Submit</button>

        </form>
    </div>
</div>