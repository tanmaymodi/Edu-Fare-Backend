<div class="hero-wrap js-fullheight">
    <div class="overlay"></div>
    <div id="particles-js"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center" data-scrollax-parent="true">
            <div class="col-md-6 ftco-animate text-center" data-scrollax=" properties: { translateY: '70%' }">

                <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span
                        style="font-family: Verdana, Geneva, Tahoma, sans-serif;">Hello,</span> <%= user.username %>
                </h1>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section contact-section ftco-degree-bg">
    <div class="container bg-light">
        <div class="row d-flex mb-5 contact-info">
            <div class="col-md-12 mb-4">
                <h2 class="h4">Profile</h2>
            </div>
            <div class="w-100"></div>

        </div>
        <div class="row block-9">
            <div class="col-md-6 pr-md-5">

                <div class="form-group">
                    <span>Username: <strong style="color: Black;"><%= user.username %></strong> </span>
                </div>
                <div class="form-group">
                    <span>Name: <strong style="color: Black;"><%= user.fullname %></strong> </span>
                </div>
                <div class="form-group">
                    <span>Type: <strong style="color: Black;"><%= user.type %></strong> </span>
                </div>
                <div class="form-group">
                    <span>Phone: <strong style="color: Black;"><%= user.phone %></strong> </span>
                </div>
                <div class="form-group">
                    <span>Email: <strong style="color: Black;"><%= user.email %></strong> </span>
                </div>
                <div class="form-group">
                    <span>Address: <strong style="color: Black;"><%= ped.address %></strong> </span>
                </div>
                <div class="form-group">
                    <span>Gender: <strong style="color: Black;"><%= ped.gender %></strong> </span>
                </div>
                <div class="form-group">
                    <span>School Name: <strong style="color: Black;"><%= ped.school %></strong> </span>
                </div>
                <div class="form-group">
                    <span>Subjects: <strong style="color: Black;"><%= ped.subjects %></strong> </span>
                </div>

                <div class="form-group">
                    <a href="/dashboard/edit" class="btn btn-primary py-3 px-5">Edit Profile</a>
                </div>

            </div>

            <div class="col-md-6">
                <img src="https://i.ytimg.com/vi/GYRWNn-X6pA/hqdefault.jpg?sqp=-oaymwEcCNACELwBSFXyq4qpAw4IARUAAIhCGAFwAcABBg==&rs=AOn4CLD8FwmvT_ytdtVRXuik6Tbdkpotiw "
                    alt="">
            </div>
        </div>
    </div>
</section>