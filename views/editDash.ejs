<style>
    button[id=submit],
    input[type=text],
    select,
    textarea {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }



    button[id=submit],
    input[type=submit] {
        width: 100%;
        background-color: #4CAF50;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    textarea {
        width: 100%;
        background-color: #ffffff;
        color: rgb(0, 0, 0);
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    button[id=submit],
    input[type=submit]:hover {
        background-color: #45a049;
    }

    div {
        border-radius: 5px;
        background-color: #f2f2f2;
        padding: 20px;
    }
</style>

<div class="container">
    <h1> Hello, <%= pde.username %> </h1>
    <div class="row">

        <form action="/dashboard/edit/" method="POST">

            <div class="form-group">
                <label for="type">Type:</label>
                <input class="form-control" type="text" name="type" placeholder="<%= pde.type %>" id="type" disabled>
            </div>

            <div class="form-group">
                <label for="Username">Name:</label>
                <input class="form-control" type="text" name="username" placeholder="<%= pde.username %>" id="username"
                    disabled>
            </div>


            <div class="form-group">
                <label for="address">Address:</label>
                <input class="form-control" type="text" name="address" value="<%= pde.address %>" id="address">
            </div>

            <div class="form-group">
                <label for="gender">Gender:</label>
                <input class="form-control" type="text" name="gender" value="<%= pde.gender %>" id="gender">
            </div>


            <div class="form-group">
                <label for="school">School Name:</label>
                <input class="form-control" type="text" name="school" value="<%= pde.school %>" id="cid">
            </div>

            <div class="form-group">
                <label for="subjects">Subjects:</label>
                <input class="form-control" type="text" name="subjects" value="<%= pde.subjects %>" id="subjects">
            </div>

            <a class="btn btn-secondary" href="/"> Cancel</a>
            <button class="btn btn-primary" type="submit"> Submit</button>

        </form>
    </div>
</div>