<script>
    var remove = (e) => {
        console.log(e.id);
        $.ajax({
            type: "GET",
            url: '/blog/remove/' + e.id,
            success: (res) => {
                console.log(res);
                window.location.replace('/blog/?page=1');
            },
            error: (err) => {
                console.log(err);
            }
        })
    }
</script>